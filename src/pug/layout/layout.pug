include ../base/mixin
include ../base/variable

doctype html

html(lang=lang)

  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=0, shrink-to-fit=no")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")

    title #{ pageTitle }
    
    // meta tags 
    block metaTags
      if useMetaTags
        meta(name="description", content=pageDescription)
        meta(name="keyword", content=pageKeyword)
        meta(name="canonical", content=pageLink)
        meta(name="author", content=pageAuthor)
        //- meta(name="classification", content="health")
        //- meta(name="distribution", content="Local")
        meta(name="copyright", content=webSiteDomainUrl)
        //- meta(name="reply-to", content=webSiteEmail)
        //- meta(name="rating", content="General")
        //- meta(name="resource-type", content="Web Page")
        meta(name="robots", content="index, follow")
    // meta tags end 

    block socialMedia
      if useTwitterMetaTags
        // twitter meta tags 
        meta(name="twitter:card", content=twitterCard)
        meta(name="twitter:site", content=twitterHandler)
        meta(name="twitter:url", content=twitterUrl)
        meta(name="twitter:title", content=twitterTitle)
        meta(name="twitter:description", content=twitterDescription)
        meta(name="twitter:image", content=twitterImage)
        // twitter meta tags end 
      if useFacebookMetaTags
        // facebook meta tags 
        meta(property="og:type", content=facebookType)
        meta(property="og:url", content=facebookUrl)
        meta(property="og:title", content=facebookTitle)
        meta(property="og:description", content=facebookDescription)
        meta(property="og:image", content=facebookImage)
        meta(property="og:locale", content=facebookLocale)
        meta(property="og:site_name", content=websiteName)
        // facebook meta tags end 

    // favicons 
    block favIcon
      link(type="image/x-icon", href="assets/img/favicon/favicon.ico", rel="icon")
    // favicons end 

    // styles
    block headerStyles
      link(href="assets/css/project.css", rel="stylesheet")
    // styles end 

